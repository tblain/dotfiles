
[module/pulseaudio]
;{{{
type = internal/pulseaudio
mapped = true
interval = 5

master-soundcard = default
speaker-soundcard = default
headphone-soundcard = default

format-volume-prefix-foreground = ${colors.volume}
format-volume-prefix-background = ${colors.background}
format-volume-suffix = " "
format-volume-prefix = %{T7}%{T-}
format-volume = <ramp-volume> <label-volume>
format-volume-background = ${colors.volume}

master-mixer = Master

#speaker-mixer = Speaker
#headphone-mixer = Headphone
#headphone-id = 9

#format-volume = <ramp-volume> <label-volume>

label-muted =  muted
label-muted-foreground = #66

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
;}}}

[module/pulseaudio2]
type = internal/pulseaudio
sink = alsa_output.pci-0000_00_1f.3.analog-stereo

format-volume = <bar-volume>
format-muted-foreground = ${colors.foreground}
label-muted = 
label-muted-font = 6
label-padding = 1


format-volume-padding = 1
format-muted-padding = 1

bar-volume-width = 6
bar-volume-foreground-0 = #10FF20
bar-volume-foreground-1 = #10FF20
bar-volume-foreground-2 = #10FF20
bar-volume-foreground-3 = #10FF20
bar-volume-foreground-4 = #10FF20
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555

bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground}

[module/microphone]

type = custom/script
exec = $HOME/.config/polybar/scripts/microphone/microphone.sh

click-left = pulseaudio-ctl mute-input
interval = 1
